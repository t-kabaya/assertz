{
  "name": "assertz",
  "version": "3.4.0",
  "description": "super simple one liner unit test library",
  "main": "dist/index.js",
  "bin": {
    "assertz": "./dist/cli.js"
  },
  "scripts": {
    "test": "env NODE_ENV='development' ts-node cli.ts",
    "watch": "env NODE_ENV='development' ts-node cli.ts -w",
    "version": "env NODE_ENV='development' ts-node -version",
    "publish": "npm publish",
    "assertz": "npx github:t-kabaya/assertz#develop",
    "ava": "ava --watch",
    "build": "npx tsc"
  },
  "keywords": [
    "unit test",
    "node.js"
  ],
  "author": "t-kabaya",
  "license": "ISC",
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^3.0.2",
    "globby": "^10.0.1",
    "lodash": "^4.17.15",
    "meow": "^5.0.0",
    "stack-trace": "^0.0.10",
    "update-notifier": "^3.0.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.144",
    "@types/node": "^12.11.7",
    "ava": "^2.4.0",
    "husky": "^3.0.9",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {}
  },
  "ava": {
    "files": [
      "ava/*"
    ]
  }
}
