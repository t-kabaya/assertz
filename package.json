{
  "name": "assertz",
  "version": "3.4.0",
  "description": "super simple one liner unit test library",
  "main": "index.js",
  "bin": "cli.js",
  "scripts": {
    "test": "env ENV='development' node cli.js",
    "publish": "npm publish",
    "assertz": "assertz",
    "ava": "ava --watch"
  },
  "keywords": [
    "unit test",
    "node.js"
  ],
  "author": "t-kabaya",
  "license": "ISC",
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^3.0.2",
    "globby": "^10.0.1",
    "lodash": "^4.17.15",
    "meow": "^5.0.0",
    "stack-trace": "^0.0.10",
    "update-notifier": "^3.0.1"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "husky": "^3.0.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test"
    }
  },
  "ava": {
    "files": [
      "ava/*"
    ]
  }
}
