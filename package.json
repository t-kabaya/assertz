{
  "name": "assertz",
  "version": "3.4.0",
  "description": "super simple one liner unit test library",
  "main": "dist/index.js",
  "bin": {
    "assertz": "./dist/cli.js"
  },
  "scripts": {
    "test": "env NODE_ENV='development' ts-node cli.ts",
    "update": "env NODE_ENV='development' ts-node cli.ts -u",
    "watch": "env NODE_ENV='development' ts-node cli.ts -w",
    "version": "env NODE_ENV='development' ts-node -version",
    "publish": "npm publish",
    "ava": "ava --watch",
    "build": "npx tsc",
    "onchane": "onchange '**/*.ts' -- yarn run test"
  },
  "keywords": [
    "unit test",
    "node.js"
  ],
  "author": "t-kabaya",
  "license": "ISC",
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^3.0.2",
    "diff": "^4.0.1",
    "globby": "^10.0.1",
    "json-diff": "^0.5.4",
    "lodash": "^4.17.15",
    "meow": "^5.0.0",
    "stack-trace": "^0.0.10",
    "strip-ansi": "^6.0.0",
    "update-notifier": "^3.0.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.144",
    "@types/node": "^12.11.7",
    "assertz": "git+https://git@github.com/t-kabaya/assertz.git#develop",
    "ava": "^2.4.0",
    "husky": "^3.0.9",
    "onchange": "^6.1.0",
    "sinon": "^7.5.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "ava": {
    "files": [
      "ava/*"
    ],
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "verbose": true
  }
}
